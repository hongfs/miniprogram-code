/**app.wxss**/
@import './weui.wxss';

page {
    background-color: #ededed;
}

.page {
    display: flex;
    flex-direction: column;
    height: 100vh;
    background-color: #ededed;
    color: rgba(0, 0, 0, 0.9);
    font-size: 16px;
    font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
    padding: 40px;
}

.page__bd {
    padding-bottom: 30px;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: rgba(0, 0, 0, 0.5);
    text-align: left;
    font-size: 14px;
}

.content {
    text-align: center;
    word-break: break-all;
}